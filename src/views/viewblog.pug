extends base.pug

block head
    link(rel="stylesheet", href="/assets/css/postStyle.css")

block content
    article.contents
        div.post
            h1.title=post.title
            p.body=post.body
            br
            ul.hashtags
                each hashtag in post.hashtags
                    li="#" + hashtag
            br
        if loggedIn
            a(href=`./${post._id}/delete`) Remove the post &rarr;
            br
            a(href=`./${post._id}/update`) Update the post &rarr;
            br
        a(href="/blog") Back to the lists &rarr;
        br